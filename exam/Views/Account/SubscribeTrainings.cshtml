@model List<Training>


    <div class="form-group">
        @if (Model.Count <= 0)
        {
            <p>Not found</p>
        }
        else
        {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Тренер
                    </th>
                    <th>
                        Тренировка
                    </th>
                    <th>
                        Зал
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var training in Model)
                {

                    <tr>
                        <td>@training.Trainer.UserName</td>
                        <td>@training.TType.Name</td>
                        <td>@training.Hall.Name</td>
                        <td>
                            <a class="btn btn-sm btn-info" type="submit" asp-controller="Account" asp-action="SubscribePost" asp-route-trainingId="@training.Id" asp-route-userName="@User.Identity.Name">Записаться</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
                        }
                    </div>
